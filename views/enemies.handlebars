<div class="container">
  <div class="row tableHeader">
    <div class="col-md-2">
      <a href="/admin"><img src="/assets/images/logo.png" alt="Zombies Rising"></a>
    </div>
    <div class="col-md-10">
      <ul class="nav nav-pills">
        {{#if isUser}}
          <li role="presentation"><a href="/admin" class="whtNavText">Play Zombies Rising</a></li>
        {{/if}}       

        {{#if isAdmin}}
          <li role="presentation"><a href="/users" class="whtNavText">Users Information</a></li>
          <li role="presentation"><a href="/characters" class="whtNavText">Character Editor</a></li>
          <li role="presentation"><a href="/levels" class="whtNavText">Level Creator</a></li>
        {{/if}}
        {{#unless logged_in}}
            <li role="presentation"><a href="/" class="whtNavText">Sign In</a></li>
        {{/unless}}

        {{#if logged_in}}
          <li role="presentation"><a href="/users/sign-out" class="whtNavText">Sign Out</a></li>
        {{/if}}
      </ul>
    </div>
  </div>
  <!-- Start Enemies Section -->
  <div class="row inventory tableDetails">
    <div class="col-md-12">&nbsp;</div>
    <div class="col-md-12">
      <button data-toggle="modal" data-target="#addNew" class="btn btn-success btn-sm newUserBtn">Enter New Enemies</button>
      <a href="/heroes" class="btn btn-info  btn-sm">Heroes Editor</a>
    </div>
    <div class="col-md-12">&nbsp;</div>
  </div>
  <div class="row inventory tableDetails">
    <div class="col-md-12">
      <table id="enemies" class="display" cellspacing="0" width="100%">
          <thead>
              <tr class="tableDetails">
                  <th>Zombie Type</th>
                  <th>Asset</th>
                  <th>Damage</th>
                  <th>Speed</th>
                  <th>Energy</th>
                  <th>Edit</th>
              </tr>
          </thead>
          <tbody>
              {{#each enemies}}
                  <tr>
                      <td data-search="{{this.zombieTypes}}">{{this.zombieTypes}}</td>
                      <td data-search="{{this.asset}}"><img src="{{this.asset}}"></td>
                      <td data-search="{{this.damage}}">{{this.damage}}</td>
                      <td data-search="{{this.vx}}">{{this.vx}}</td>
                      <td data-search="{{this.energy}}">{{this.energy}}</td>
                      <td width="70" align="center">
                        <span>
                        <a href="#" data-toggle="modal" data-target="#enemies-{{this.enemiesId}}"><img src="/assets/images/edit_btn.png" alt="edit"></a> <a href="#" data-toggle="modal" data-target="#delete-{{this.enemiesId}}"><img src="/assets/images/delete_btn.png" alt="delete"></a>
                        </span>
                      </td>
                  </tr>
                  <!-- Modal -->
                  <div id="enemies-{{this.enemiesId}}" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title whtText">Update {{this.zombieTypes}}</h4>
                        </div>
                        <div class="modal-body">
                          <form action="enemies/update/{{this.enemiesId}}?_method=PUT" method="POST" class="form col-md-12 center-block">
                              <div class="form-group">
                                Zombie Types <input type="text" class="form-control input-md" value="{{this.zombieTypes}}" name="zombieTypes">
                              </div>
                              <div class="form-group">
                                Asset <input type="text" class="form-control input-md" value="{{this.asset}}" name="asset">
                              </div>
                              <div class="form-group">
                                Damage <input type="text" class="form-control input-md" value="{{this.damage}}" name="damage">
                              </div>
                              <div class="form-group">
                                Speed <input type="text" class="form-control input-md" value="{{this.vx}}" name="vx">
                              </div>
                              <div class="form-group">
                                Energy <input type="text" class="form-control input-md" value="{{this.energy}}" name="energy">
                              </div>
                              <div class="form-group">
                                <button class="btn btn-success btn-lg btn-block">Update</button>
                              </div>
                          </form>
                        </div>
                        <div class="modal-footer">&nbsp;</div>
                      </div>
                    </div>
                  </div>
                  <!-- Modal Delete -->
                  <div id="delete-{{this.enemiesId}}" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title">Are you sure you want to delete {{this.productName}}</h4>
                        </div>
                        <div class="modal-body">
                          <form action="enemies/delete/{{this.enemiesId}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger btn-lg btn-block">DELETE!</button>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
              {{/each}}
          </tbody>
      </table>
    </div>
    <div class="col-md-12">&nbsp;</div>
  </div>

  <!-- Modal Add New -->
  <div id="addNew" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Enter New User</h4>
        </div>
        <div class="modal-body">
          <form action="enemies/createNewUser" method="POST" class="form center-block">
              

              <div class="form-group">
                User Id <input type="text" class="form-control input-md" name="enemiesId">
              </div>
              <div class="form-group">
                User Name <input type="text" class="form-control input-md" name="username">
              </div>
              <div class="form-group">
                Name <input type="text" class="form-control input-md" name="name">
              </div>
              <div class="form-group">
                Email Address <input type="text" class="form-control input-md" name="emailAddress">
              </div>
              <div class="form-group">
                Password <input type="password" class="form-control input-lg" placeholder="Password" name="password">
              </div>
              <div class="form-group">
                Role <input type="text" class="form-control input-md" name="role">
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-md">Add New</button>
              </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!-- End Enemies Section -->
</div>