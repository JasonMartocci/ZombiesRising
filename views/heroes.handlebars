<div class="container">
  <div class="row tableHeader">
    <div class="col-md-2">
      <a href="/"><img src="/assets/images/logo.png" alt="Zombies Rising"></a>
    </div>
    <div class="col-md-10">
      <ul class="nav nav-pills">
        {{#if isUser}}
          <li role="presentation"><a href="/admin" class="whtNavText">Play Zombies Rising</a></li>
        {{/if}}       

        {{#if isAdmin}}
          <li role="presentation"><a href="/users" class="whtNavText">Users</a></li>
          <li role="presentation"><a href="/levels" class="whtNavText">Level Creator</a></li>
          <li role="presentation"><a href="/characters" class="whtNavText">Character Creator</a></li>
        {{/if}}

        {{#unless logged_in}}
            <li role="presentation"><a href="/" class="whtNavText">Sign In</a></li>
        {{/unless}}

        {{#if logged_in}}
          <li role="presentation"><a href="/users/sign-out" class="whtNavText">Sign Out</a></li>
        {{/if}}
      </ul>
    </div>
  </div>

  <!-- Start Heroes Section -->
  <div class="row inventory tableDetails">
    <div class="col-md-12">&nbsp;</div>
    <div class="col-md-12">
      <button data-toggle="modal" data-target="#addNew" class="btn btn-success btn-sm newUserBtn">Enter New Heroes</button>
      <a href="/enemies" class="btn btn-info  btn-sm">Enemies Editor</a>
    </div>
    <div class="col-md-12">&nbsp;</div>
  </div>
  <div class="row inventory tableDetails">
    <div class="col-md-12">
      <table id="heroes" class="display" cellspacing="0" width="100%">
          <thead>
              <tr class="tableDetails">
                  <th>Heroes Type</th>
                  <th>Asset</th>
                  <th>Cost</th>
                  <th>Energy</th>
                  <th>Sun Producer</th>
                  <th>Sun Frequency</th>
                  <th>Shooter</th>
                  <th>Shooter Frequency</th>
                  <th>Exploding</th>
                  <th>Damage</th>
                  <th>Edit</th>
              </tr>
          </thead>
          <tbody>
              {{#each heroes}}
                  <tr>
                      <td data-search="{{this.plantTypes}}">{{this.plantTypes}}</td>
                      <td data-search="{{this.asset}}"><img src="{{this.asset}}"></td>
                      <td data-search="{{this.cost}}">{{this.cost}}</td>
                      <td data-search="{{this.energy}}">{{this.energy}}</td>
                      <td data-search="{{this.isSunProducer}}">{{this.isSunProducer}}</td>
                      <td data-search="{{this.sunFrequency}}">{{this.sunFrequency}}</td>
                      <td data-search="{{this.isShooter}}">{{this.isShooter}}</td>
                      <td data-search="{{this.shootingFrequency}}">{{this.shootingFrequency}}</td>
                      <td data-search="{{this.isExploding}}">{{this.isExploding}}</td>
                      <td data-search="{{this.damage}}">{{this.damage}}</td>
                      <td width="70" align="center">
                        <span>
                        <a href="#" data-toggle="modal" data-target="#users-{{this.userId}}"><img src="/assets/images/edit_btn.png" alt="edit"></a> <a href="#" data-toggle="modal" data-target="#delete-{{this.userId}}"><img src="/assets/images/delete_btn.png" alt="delete"></a>
                        </span>
                      </td>
                  </tr>
                  <!-- Modal -->
                  <div id="users-{{this.userId}}" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title">Update {{this.productName}}</h4>
                        </div>
                        <div class="modal-body">
                          <form action="users/update/{{this.userId}}?_method=PUT" method="POST" class="form col-md-12 center-block">
                              <div class="form-group">
                                User Id <input type="text" class="form-control input-md" name="userId" value="{{this.userId}}">
                              </div>
                              <div class="form-group">
                                User Name <input type="text" class="form-control input-md" name="username" value="{{this.userName}}">
                              </div>
                              <div class="form-group">
                                Name <input type="text" class="form-control input-md" name="name" value="{{this.name}}">
                              </div>
                              <div class="form-group">
                                Email Address <input type="text" class="form-control input-md" name="emailAddress" value="{{this.emailAddress}}">
                              </div>
                              <div class="form-group">
                                Role <input type="text" class="form-control input-md" name="role" value="{{this.role}}">
                              </div>
                              <div class="form-group">
                                <button class="btn btn-primary btn-lg btn-block">Update</button>
                              </div>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Modal Delete -->
                  <div id="delete-{{this.userId}}" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title">Are you sure you want to delete {{this.productName}}</h4>
                        </div>
                        <div class="modal-body">
                          <form action="users/delete/{{this.userId}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger btn-lg btn-block">DELETE!</button>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
              {{/each}}
          </tbody>
      </table>
    </div>
    <div class="col-md-12">&nbsp;</div>
  </div>

  <!-- Modal Add New -->
  <div id="addNew" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Enter New User</h4>
        </div>
        <div class="modal-body">
          <form action="users/createNewUser" method="POST" class="form center-block">
              <div class="form-group">
                User Id <input type="text" class="form-control input-md" name="userId">
              </div>
              <div class="form-group">
                User Name <input type="text" class="form-control input-md" name="username">
              </div>
              <div class="form-group">
                Name <input type="text" class="form-control input-md" name="name">
              </div>
              <div class="form-group">
                Email Address <input type="text" class="form-control input-md" name="emailAddress">
              </div>
              <div class="form-group">
                Password <input type="password" class="form-control input-lg" placeholder="Password" name="password">
              </div>
              <div class="form-group">
                Role <input type="text" class="form-control input-md" name="role">
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-md">Add New</button>
              </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!-- End Heroes Section -->
</div>