<div class="container">
  <div class="row tableHeader">
    <div class="col-md-2">
      <a href="/admin"><img src="/assets/images/logo.png" alt="Zombies Rising"></a>
    </div>
    <div class="col-md-10">
      <ul class="nav nav-pills">
        {{#if isUser}}
          <li role="presentation"><a href="/admin" class="whtNavText">Play Zombies Rising</a></li>
        {{/if}}       

        {{#if isAdmin}}
          <li role="presentation"><a href="/users" class="whtNavText">Users Information</a></li>
          <li role="presentation"><a href="/characters" class="whtNavText">Character Editor</a></li>
          <li role="presentation"><a href="/levels" class="whtNavText">Level Creator</a></li>
        {{/if}}

        {{#unless logged_in}}
            <li role="presentation"><a href="/" class="whtNavText">Sign In</a></li>
        {{/unless}}

        {{#if logged_in}}
          <li role="presentation"><a href="/users/sign-out" class="whtNavText">Sign Out</a></li>
        {{/if}}
      </ul>
    </div>
  </div>

  <!-- Start Heroes Section -->
  <div class="row inventory tableDetails">
    <div class="col-md-12">&nbsp;</div>
    <div class="col-md-12">
      <button data-toggle="modal" data-target="#addNew" class="btn btn-success btn-sm newUserBtn">Enter New Heroes</button>
      <a href="/enemies" class="btn btn-info  btn-sm">Enemies Editor</a>
    </div>
    <div class="col-md-12">&nbsp;</div>
  </div>
  <div class="row inventory tableDetails">
    <div class="col-md-12">
      <table id="heroes" class="display" cellspacing="0" width="100%">
          <thead>
              <tr class="tableDetails">
                  <th>Heroes Type</th>
                  <th>Asset</th>
                  <th>Cost</th>
                  <th>Energy</th>
                  <th>Sun Producer</th>
                  <th>Sun Frequency</th>
                  <th>Shooter</th>
                  <th>Shooter Frequency</th>
                  <th>Exploding</th>
                  <th>Damage</th>
                  <th>Edit</th>
              </tr>
          </thead>
          <tbody>
              {{#each heroes}}
                  <tr>
                      <td data-search="{{this.plantTypes}}">{{this.plantTypes}}</td>
                      <td data-search="{{this.asset}}"><img src="{{this.asset}}" width="100" alt="{{this.plantTypes}}"></td>
                      <td data-search="{{this.cost}}">{{this.cost}}</td>
                      <td data-search="{{this.energy}}">{{this.energy}}</td>
                      <td data-search="{{this.isSunProducer}}">{{this.isSunProducer}}</td>
                      <td data-search="{{this.sunFrequency}}">{{this.sunFrequency}}</td>
                      <td data-search="{{this.isShooter}}">{{this.isShooter}}</td>
                      <td data-search="{{this.shootingFrequency}}">{{this.shootingFrequency}}</td>
                      <td data-search="{{this.isExploding}}">{{this.isExploding}}</td>
                      <td data-search="{{this.damage}}">{{this.damage}}</td>
                      <td width="70" align="center">
                        <span>
                        <a href="#" data-toggle="modal" data-target="#heroes-{{this.heroesId}}"><img src="/assets/images/edit_btn.png" alt="edit"></a> <a href="#" data-toggle="modal" data-target="#delete-{{this.heroesId}}"><img src="/assets/images/delete_btn.png" alt="delete"></a>
                        </span>
                      </td>
                  </tr>
                  <!-- Modal -->
                  <div id="heroes-{{this.heroesId}}" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title whtText">Update {{this.plantTypes}}</h4>
                        </div>
                        <div class="modal-body">
                          <form action="heroes/update/{{this.heroesId}}?_method=PUT" method="POST" class="form col-md-12 center-block">
                              <div class="form-group">
                                Types <input type="text" class="form-control input-md" value="{{this.plantTypes}}" name="plantTypes">
                              </div>
                              <div class="form-group">
                                Image Location <input type="text" class="form-control input-md" value="{{this.asset}}" name="asset">
                              </div>
                              <div class="form-group">
                                Cost <input type="text" class="form-control input-md" value="{{this.cost}}" name="cost">
                              </div>
                              <div class="form-group">
                                Energy<input type="text" class="form-control input-md" value="{{this.energy}}" name="energy">
                              </div>
                              <div class="form-group">
                                Sun Producer <input type="text" class="form-control input-md" value="{{this.isSunProducer}}" name="isSunProducer">
                              </div>
                              <div class="form-group">
                                Sun Frequency <input type="text" class="form-control input-md" value="{{this.sunFrequency}}" name="sunFrequency">
                              </div>
                              <div class="form-group">
                                Shooter <input type="text" class="form-control input-md" value="{{this.isShooter}}" name="isShooter">
                              </div>
                              <div class="form-group">
                                Shooting Frequency <input type="text" class="form-control input-md" value="{{this.shootingFrequency}}" name="shootingFrequency">
                              </div>
                              <div class="form-group">
                                Exploding <input type="text" class="form-control input-md" value="{{this.isExploding}}" name="isExploding">
                              </div>
                              <div class="form-group">
                                Damage <input type="text" class="form-control input-md" value="{{this.damage}}" name="damage">
                              </div>
                              <div class="form-group">
                                <button class="btn btn-success btn-lg btn-block">Update</button>
                              </div>
                          </form>
                        </div>
                        <div class="modal-footer">&nbsp;</div>
                      </div>
                    </div>
                  </div>
                  <!-- Modal Delete -->
                  <div id="delete-{{this.heroesId}}" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title whtText">Are you sure you want to delete {{this.plantTypes}}</h4>
                        </div>
                        <div class="modal-body">
                          <form action="heroes/delete/{{this.heroesId}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger btn-lg btn-block">DELETE!</button>
                          </form>
                        </div>
                        <div class="modal-footer">&nbsp;</div>
                      </div>
                    </div>
                  </div>
              {{/each}}
          </tbody>
      </table>
    </div>
    <div class="col-md-12">&nbsp;</div>
  </div>

  <!-- Modal Add New -->
  <div id="addNew" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title whtText">Enter New Hero</h4>
        </div>
        <div class="modal-body">
          <form action="heroes/createNewHeroes" method="POST" class="form center-block">
              <div class="form-group">
                Types <input type="text" class="form-control input-md" name="plantTypes" required>
              </div>
              <div class="form-group">
                Image Location <input type="text" class="form-control input-md" name="asset" required>
              </div>
              <div class="form-group">
                Cost <input type="text" class="form-control input-md" name="cost" required>
              </div>
              <div class="form-group">
                Energy<input type="text" class="form-control input-md" name="energy" required>
              </div>
              <div class="form-group">
                Sun Producer <input type="text" class="form-control input-md" name="isSunProducer" required>
              </div>
              <div class="form-group">
                Sun Frequency <input type="text" class="form-control input-md" name="sunFrequency" required>
              </div>
              <div class="form-group">
                Shooter <input type="text" class="form-control input-md" name="isShooter" required>
              </div>
              <div class="form-group">
                Shooting Frequency <input type="text" class="form-control input-md" name="shootingFrequency" required>
              </div>
              <div class="form-group">
                Exploding <input type="text" class="form-control input-md" name="isExploding" required>
              </div>
              <div class="form-group">
                Damage <input type="text" class="form-control input-md" name="damage" required>
              </div>
              <div class="form-group">
                <button class="btn btn-success btn-lg btn-block">Enter New Hero</button>
              </div>
          </form>
        </div>
        <div class="modal-footer">&nbsp;</div>
      </div>
    </div>
  </div>
  <!-- End Heroes Section -->
</div>